# zsh as default shell
set-option -g default-shell /bin/zsh

### KEY BINDING ###

# allow to scroll with mouse scroll
set -g mouse on

# use vi-like movement keys
setw -g mode-keys vi

# additional vi-llike copy and paste
bind-key -t copy-mode-vi-copy 'v' send-keys -X begin-selection
bind-key -T copy-mode-vi 'y' send-keys -X copy-selection

# vi-like pane switching
bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

# scrollback buffer n lines
set -g history-limit 10000

### STATUS BAR ###

set -g display-time 2000

# start window indexing at one instead of zero
set -g base-index 1

# center align the window list
set -g status-justify centre

### COLORS ###

set-option -g default-terminal "screen-256color"

# default statusbar colors
set-option -ga status-style bg=black #base02
set-option -ga status-style fg=yellow #yellow
#set-option -ga status-style default

# default window title colors
set-window-option -ga window-status-style fg=blue #base0
set-window-option -ga window-status-style bg=default
#set-window-option -ga window-status-style dim

# active window title colors
set-window-option -ga window-status-current-style fg=brightred #orange
set-window-option -ga window-status-current-style bg=default
#set-window-option -ga window-status-current-style bright

# pane border
set-option -ga pane-border-style fg=green
set-option -ga pane-active-border-style fg=brightgreen #base01

# message text
set-option -ga message-style bg=black #base02
set-option -ga message-style fg=brightred #orange

# pane number display
set-option -ga display-panes-active-colour blue #blue
set-option -ga display-panes-colour brightred #orange

# clock
set-window-option -g clock-mode-colour green #green
